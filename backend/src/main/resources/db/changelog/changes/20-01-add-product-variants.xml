<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="5" author="gemini">
        <createTable tableName="product_variants">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="label" type="VARCHAR(255)"/>
            <column name="price" type="DOUBLE"/>
            <column name="session_count" type="INT"/>
            <column name="duration_months" type="INT"/>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_variant_product" referencedTableName="products" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
