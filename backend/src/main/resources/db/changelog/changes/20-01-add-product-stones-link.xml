<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="13" author="gemini">
        <!-- Création de la table de référence des pierres -->
        <createTable tableName="ref_stones">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
        </createTable>

        <!-- Création de la table de jointure -->
        <createTable tableName="product_stones_link">
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_psl_product" references="products(id)"/>
            </column>
            <column name="stone_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_psl_stone" references="ref_stones(id)"/>
            </column>
        </createTable>

        <!-- Suppression de l'ancienne table ElementCollection si elle existe encore -->
        <dropTable tableName="product_stones"/>
    </changeSet>

</databaseChangeLog>
