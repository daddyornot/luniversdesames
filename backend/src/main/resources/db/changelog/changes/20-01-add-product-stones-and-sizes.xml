<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="10" author="gemini">
        <!-- Table pour les pierres (ElementCollection) -->
        <createTable tableName="product_stones">
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_product_stones_product" references="products(id)"/>
            </column>
            <column name="stone_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Table pour les tailles -->
        <createTable tableName="product_sizes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_product_sizes_product" references="products(id)"/>
            </column>
            <column name="label" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>

        <!-- Supprimer l'ancienne colonne 'stone' de la table products -->
        <dropColumn tableName="products" columnName="stone"/>
    </changeSet>

</databaseChangeLog>
